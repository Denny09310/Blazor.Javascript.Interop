@inherits LayoutComponentBase

<div class="drawer lg:drawer-open">
    <input id="main-layout-drawer" type="checkbox" class="drawer-toggle" />
    <div class="drawer-content flex flex-col items-center justify-center">
        <nav class="navbar bg-primary text-white p-4">
            <div class="navbar-start gap-2">
                <label for="main-layout-drawer" class="btn btn-square btn-ghost lg:hidden">
                    <i class="fa fa-bars fa-xl" />
                </label>
                <NavLink href="" class="font-bold text-xl">Blazor Javascript Interop</NavLink>
            </div>
        </nav>
        @Body
    </div>
    <div class="drawer-side">
        <label for="main-layout-drawer" aria-label="close sidebar" class="drawer-overlay"></label>
        <div class="flex flex-col h-full w-80 bg-base-200">
            <NavMenu />
        </div>
    </div>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
